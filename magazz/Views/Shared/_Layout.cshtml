<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MAGAZZ</title>
    
    <!-- Tailwind CSS -->
    <link rel="stylesheet" href="~/css/output.css" asp-append-version="true" />
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body class="font-sans antialiased bg-white text-gray-900">
    <header class="border-b border-gray-200 sticky top-0 bg-white z-50">
        <nav class="container mx-auto px-4 py-4">
            <div class="flex items-center justify-between">
                <!-- Логотип -->
                <a asp-controller="Home" asp-action="Index" class="text-xl font-semibold tracking-tight">
                    MAGAZZ
                </a>
                
                <!-- Меню Desktop -->
                <div class="hidden md:flex items-center gap-8">
                    <a asp-controller="Home" asp-action="Index" class="text-sm hover:text-gray-600 transition">
                        Главная
                    </a>
                    <a asp-controller="Products" asp-action="Index" class="text-sm hover:text-gray-600 transition">
                        Каталог
                    </a>
                    <a asp-controller="Products" asp-action="Index" asp-route-categoryId="1" class="text-sm hover:text-gray-600 transition">
                        Мужское
                    </a>
                    <a asp-controller="Products" asp-action="Index" asp-route-categoryId="2" class="text-sm hover:text-gray-600 transition">
                        Женское
                    </a>
                    <a asp-controller="Products" asp-action="Index" asp-route-categoryId="3" class="text-sm hover:text-gray-600 transition">
                        Аксессуары
                    </a>
                </div>
                
                <!-- Правая часть -->
                <div class="flex items-center gap-6">
                    <!-- Корзина -->
                    <a asp-controller="Cart" asp-action="Index" class="text-sm hover:text-gray-600 transition">
                        Корзина
                    </a>
                    
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <!-- Меню пользователя -->
                        <div class="relative group">
                            <button class="text-sm hover:text-gray-600 transition">
                                @User.Identity.Name
                            </button>
                            <div class="absolute right-0 mt-2 w-48 bg-white border border-gray-200 rounded-md shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200">
                                <a asp-controller="Account" asp-action="Profile" class="block px-4 py-2 text-sm hover:bg-gray-50">
                                    Профиль
                                </a>
                                <a asp-controller="Order" asp-action="MyOrders" class="block px-4 py-2 text-sm hover:bg-gray-50">
                                    Мои заказы
                                </a>
                                <div class="border-t border-gray-200"></div>
                                <form asp-controller="Account" asp-action="Logout" method="post">
                                    <button type="submit" class="w-full text-left px-4 py-2 text-sm hover:bg-gray-50">
                                        Выйти
                                    </button>
                                </form>
                            </div>
                        </div>
                    }
                    else
                    {
                        <a asp-controller="Account" asp-action="Login" class="text-sm hover:text-gray-600 transition">
                            Вход
                        </a>
                        <a asp-controller="Account" asp-action="Register" class="text-sm px-4 py-2 bg-black text-white rounded-md hover:bg-gray-800 transition">
                            Регистрация
                        </a>
                    }
                    
                    <!-- Мобильное меню кнопка -->
                    <button id="mobile-menu-btn" class="md:hidden text-sm">
                        ☰
                    </button>
                </div>
            </div>
            
            <!-- Мобильное меню -->
            <div id="mobile-menu" class="md:hidden hidden mt-4 pb-4 border-t border-gray-200 pt-4">
                <div class="flex flex-col gap-3">
                    <a asp-controller="Home" asp-action="Index" class="text-sm hover:text-gray-600 transition">
                        Главная
                    </a>
                    <a asp-controller="Products" asp-action="Index" class="text-sm hover:text-gray-600 transition">
                        Каталог
                    </a>
                    <a asp-controller="Products" asp-action="Index" asp-route-categoryId="1" class="text-sm hover:text-gray-600 transition">
                        Мужское
                    </a>
                    <a asp-controller="Products" asp-action="Index" asp-route-categoryId="2" class="text-sm hover:text-gray-600 transition">
                        Женское
                    </a>
                    <a asp-controller="Products" asp-action="Index" asp-route-categoryId="3" class="text-sm hover:text-gray-600 transition">
                        Аксессуары
                    </a>
                </div>
            </div>
        </nav>
    </header>

    <main class="min-h-screen">
        @RenderBody()
    </main>

    <footer class="border-t border-gray-200 mt-20 bg-gray-50">
        <div class="container mx-auto px-4 py-12">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                <!-- О компании -->
                <div>
                    <h3 class="font-semibold mb-4">MAGAZZ</h3>
                    <p class="text-sm text-gray-600">
                        Минималистичная одежда для современного стиля
                    </p>
                </div>
                
                <!-- Навигация -->
                <div>
                    <h3 class="font-semibold mb-4">Навигация</h3>
                    <div class="space-y-2">
                        <a asp-controller="Home" asp-action="Index" class="block text-sm text-gray-600 hover:text-gray-900">
                            Главная
                        </a>
                        <a asp-controller="Products" asp-action="Index" class="block text-sm text-gray-600 hover:text-gray-900">
                            Каталог
                        </a>
                        <a asp-controller="Home" asp-action="Privacy" class="block text-sm text-gray-600 hover:text-gray-900">
                            Политика конфиденциальности
                        </a>
                    </div>
                </div>
                
                <!-- Контакты -->
                <div>
                    <h3 class="font-semibold mb-4">Контакты</h3>
                    <div class="space-y-2 text-sm text-gray-600">
                        <p>Email: info@magazz.com</p>
                        <p>Телефон: +7 (999) 123-45-67</p>
                    </div>
                </div>
            </div>
            
            <div class="border-t border-gray-200 mt-8 pt-8 text-center text-sm text-gray-500">
                &copy; 2025 MAGAZZ - Все права защищены
            </div>
        </div>
    </footer>

    <!-- Скрипт для мобильного меню -->
    <script>
        document.getElementById('mobile-menu-btn')?.addEventListener('click', function() {
            const menu = document.getElementById('mobile-menu');
            menu.classList.toggle('hidden');
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
