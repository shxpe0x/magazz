@model magazz.Models.Cart

@{
    ViewData["Title"] = "Корзина";
    var totalPrice = Model.CartItems.Sum(i => i.Product.Price * i.Quantity);
}

<div class="container mt-4">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.CartItems.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-cart-x"></i> Ваша корзина пуста
        </div>
        <a asp-controller="Products" asp-action="Index" class="btn btn-primary">
            <i class="bi bi-shop"></i> Перейти в каталог
        </a>
    }
    else
    {
        <div class="row">
            <div class="col-md-8">
                @foreach (var item in Model.CartItems)
                {
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col-md-6">
                                    <h5 class="card-title">
                                        <a asp-controller="Products" asp-action="Details" asp-route-id="@item.ProductId" class="text-decoration-none">
                                            @item.Product.Name
                                        </a>
                                    </h5>
                                    <p class="card-text text-muted mb-1">@item.Product.Description</p>
                                    @if (!string.IsNullOrEmpty(item.SelectedSize) || !string.IsNullOrEmpty(item.SelectedColor))
                                    {
                                        <p class="mb-0">
                                            @if (!string.IsNullOrEmpty(item.SelectedSize))
                                            {
                                                <span class="badge bg-secondary">Размер: @item.SelectedSize</span>
                                            }
                                            @if (!string.IsNullOrEmpty(item.SelectedColor))
                                            {
                                                <span class="badge bg-secondary ms-1">Цвет: @item.SelectedColor</span>
                                            }
                                        </p>
                                    }
                                </div>
                                <div class="col-md-3">
                                    <form asp-action="UpdateQuantity" method="post" class="d-flex align-items-center">
                                        <input type="hidden" name="cartItemId" value="@item.Id" />
                                        <button type="submit" name="quantity" value="@(item.Quantity - 1)" class="btn btn-sm btn-outline-secondary">
                                            <i class="bi bi-dash"></i>
                                        </button>
                                        <input type="number" name="quantity" value="@item.Quantity" min="1" class="form-control form-control-sm mx-2 text-center" style="width: 60px;" />
                                        <button type="submit" name="quantity" value="@(item.Quantity + 1)" class="btn btn-sm btn-outline-secondary">
                                            <i class="bi bi-plus"></i>
                                        </button>
                                    </form>
                                </div>
                                <div class="col-md-2 text-end">
                                    <h5 class="text-primary mb-2">@((item.Product.Price * item.Quantity).ToString("N0")) ₽</h5>
                                    <form asp-action="RemoveFromCart" method="post" class="d-inline">
                                        <input type="hidden" name="cartItemId" value="@item.Id" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                }

                <form asp-action="Clear" method="post" class="mt-3">
                    <button type="submit" class="btn btn-outline-danger btn-sm">
                        <i class="bi bi-trash"></i> Очистить корзину
                    </button>
                </form>
            </div>

            <!-- Итого -->
            <div class="col-md-4">
                <div class="card sticky-top" style="top: 20px;">
                    <div class="card-header">
                        <h5 class="mb-0">Итого</h5>
                    </div>
                    <div class="card-body">
                        <table class="table table-borderless mb-3">
                            <tr>
                                <td>Товаров:</td>
                                <td class="text-end">@Model.CartItems.Count шт.</td>
                            </tr>
                            <tr>
                                <td>Количество:</td>
                                <td class="text-end">@Model.CartItems.Sum(i => i.Quantity) шт.</td>
                            </tr>
                            <tr class="border-top">
                                <td><strong>Итого:</strong></td>
                                <td class="text-end"><h4 class="text-primary mb-0">@totalPrice.ToString("N0") ₽</h4></td>
                            </tr>
                        </table>

                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <a asp-controller="Order" asp-action="Checkout" class="btn btn-success btn-lg w-100">
                                <i class="bi bi-check-circle"></i> Оформить заказ
                            </a>
                        }
                        else
                        {
                            <div class="alert alert-warning">
                                <i class="bi bi-info-circle"></i> Для оформления заказа необходимо войти
                            </div>
                            <a asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Url.Action("Checkout", "Order")" class="btn btn-primary w-100 mb-2">
                                <i class="bi bi-box-arrow-in-right"></i> Войти
                            </a>
                            <a asp-controller="Account" asp-action="Register" class="btn btn-outline-primary w-100">
                                <i class="bi bi-person-plus"></i> Зарегистрироваться
                            </a>
                        }

                        <a asp-controller="Products" asp-action="Index" class="btn btn-outline-secondary w-100 mt-2">
                            <i class="bi bi-arrow-left"></i> Продолжить покупки
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Авто-обновление количества при изменении
        document.querySelectorAll('input[type="number"]').forEach(input => {
            input.addEventListener('change', function() {
                this.closest('form').submit();
            });
        });
    </script>
}
